// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("POSTGRES_URL") 
}

// ... (Model User dan Transaction biarkan sama seperti sebelumnya)
model User {
  id        Int           @id @default(autoincrement())
  name      String
  email     String        @unique
  password  String
  createdAt DateTime      @default(now())
  transactions Transaction[]
  schedules    Schedule[]
  goals        Goal[]
  budgets      Budget[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  title       String
  amount      Float
  type        Type
  category    String
  priority    String   @default("NEED")
  date        DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Schedule {
  id          Int      @id @default(autoincrement())
  subject     String
  time        String
  room        String
  type        String
  day         String
  isCompleted Boolean  @default(false) // <--- TAMBAH INI
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

model Goal {
  id           Int      @id @default(autoincrement())
  title        String   // Nama Target (e.g. Beli iPhone)
  targetAmount Float    // Target Uang (e.g. 15.000.000)
  savedAmount  Float    @default(0) // Uang terkumpul saat ini
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
}

model Budget {
  id        Int      @id @default(autoincrement())
  category  String   // Contoh: "Food", "Transport"
  limit     Float    // Batas maksimal (Contoh: 500000)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Biar satu user cuma punya satu budget per kategori (opsional tapi bagus)
  @@unique([userId, category]) 
}

enum Type {
  INCOME
  EXPENSE
}